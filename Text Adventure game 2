# Computing-project-and-tutorial
import time
def vinput():
    while True:
        try:
            inp=input("Please enter a or b: ").lower()
            if inp in ["a","b"]:
                break
            else:
                print("That's not a valid number")
        except:
            print("That's not even an input!")
    
    return inp
time.sleep(1)
print("----------------School Adventure---------------")
